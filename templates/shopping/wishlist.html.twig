{% extends 'base.html.twig' %}

{% block title %}Wishlist{% endblock %}

{% block body %}

<h1 class="titre center">Wishlist</h1>

{% if wishlist is empty %}

    <p>Votre wishlist est vide !</p>

{% else %}

    <table class="table-recap">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Promo</th>
                <th>Acheter</th>
            </tr>
        </thead>
        <tbody>
            {% for wish in wishlist %}
            <tr>
                <td><a href="{{ path("show_shop", {'slug':wish.slug}) }}" class="mya"><img src="{{ asset(wish.image) }}" alt="{{ wish.slug }}"></a>
                <a href="{{ path("show_shop", {'slug':wish.slug}) }}" class="mya">{{ wish }}</a> <a class="a-delete" href="{{ path("del_wishlist", {'slug':wish.slug}) }}">Supprimer</a></td>
                <td class="center">{{ wish.prix }} â‚¬</td>
                <td class="center">{{ wish.promo == null ? "" : wish.promo ~" %"}}</td>
                <td class="center"><a><i class="fa-solid fa-cart-shopping"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endif %}

{% endblock %}
