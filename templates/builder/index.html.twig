{% extends 'base.html.twig' %}

{% block title %}Builder{% endblock %}

{% block body %}

<div class="center">
    <h1 class="titre">Builder</h1>
    <div id="builder">
        <div id="builder-left">

            <div class="builder-box">
                <a href="{{ path("redirect_builder",{'idCategorie':3}) }}"><img src="{{ (builder.grip == null) ? asset("img/builderGrip.png") : asset('img_produit/' ~ builder.grip.image) }}" alt="grip"></a>
            </div>
            <div class="builder-box">
                <a href="{{ path("redirect_builder",{'idCategorie':1}) }}"><img src="{{ (builder.board == null) ? asset("img/builderBoard.png") : asset('img_produit/' ~ builder.board.image) }}" alt="Board"></a>
            </div>
            <div class="builder-box">
                <a href="{{ path("redirect_builder",{'idCategorie':5}) }}"><img src="{{ (builder.screws == null) ? asset("img/builderScrews.png") : asset('img_produit/' ~ builder.screws.image) }}" alt="Screws"></a>
            </div>

        </div>

        {{ form_start(form) }}
            <div>
                {{ form_label(form.nom) }}<br>
                {{ form_widget(form.nom) }}
            </div>
            <div>
                {{ form_label(form.description) }}<br>
                {{ form_widget(form.description) }}
            </div>
        {{ form_end(form) }}

        <div id="builder-right">

            <div class="builder-box">
                <a href="{{ path("redirect_builder",{'idCategorie':4}) }}"><img src="{{ (builder.truck == null) ? asset("img/builderTruck.png") : asset('img_produit/' ~ builder.truck.image) }}" alt="Truck"></a>
            </div>
            <div class="builder-box">
                <a href="{{ path("redirect_builder",{'idCategorie':6}) }}"><img src="{{ (builder.bearings == null) ? asset("img/builderBearings.png") : asset('img_produit/' ~ builder.bearings.image) }}" alt="Bearings"></a>
            </div>
            <div class="builder-box">
                <a href="{{ path("redirect_builder",{'idCategorie':2}) }}"><img src="{{ (builder.wheels == null) ? asset("img/builderWheels.png") : asset('img_produit/' ~ builder.wheels.image) }}" alt="Wheels"></a>
            </div>

        </div>
    </div>
    
    {% set total = 0 %}
    {% for item in builder %}
        {% if item %}
            {% set total = total + item.prix %}
        {% endif %}
    {% endfor %}
    <p>Prix total : {{ total }} â‚¬</p>
    
    <div class="titre">
        <a class="mya btn-danger" href="{{ path("reset_builder") }}">RESET</a>
        <a class="mya btn-send" href="{{ path("transform_builder") }}">CART</a>
    </div>
</div>

{% endblock %}
